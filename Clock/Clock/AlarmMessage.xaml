<Window x:Class="Clock.AlarmMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock"
        mc:Ignorable="d"
        Title="AlarmMessage" Height="146.136" Width="277.737" AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid Background="#FF222336">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label
                x:Name="alarmsName"
               Content="Label" 
               FontSize="35" 
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Foreground="#FF1EC361" BorderThickness="0,0,0,1"
               />
        <Button Grid.Row="1"
                Background="#FF1EC361"
                Content="Stop"
                FontSize="25" 
                Margin="89,20,90,10"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Foreground="#FF222336" Click="Button_Click" Grid.ColumnSpan="2"
                />
    </Grid>
</Window>
